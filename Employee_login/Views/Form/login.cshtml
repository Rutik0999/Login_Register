@model Employee_login.Models.Emp_data
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    <div class="col-md-6">
        @using (Html.BeginForm("login","Form",FormMethod.Post))
        {

            <div class="form-group">
                <label for="Employee Code">Employee Code</label>
                @Html.TextBoxFor(e => e.Employee_code, new { @class = "form-control" })
            </div>

        <div class="form-group">
            <label for="Password">Password</label>
            @Html.TextBoxFor(e => e.Pass, new { @class = "form-control" })
        </div>

           <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</body>
</html>
